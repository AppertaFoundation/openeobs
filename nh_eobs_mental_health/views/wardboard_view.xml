<openerp>
    <data>
        <record model="ir.ui.view" id="view_mental_wardboard_form">
            <field name="name">Mental Wardboard Form View</field>
            <field name="model">nh.clinical.wardboard</field>
            <field name="inherit_id" ref="nh_eobs.view_wardboard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="prompt_user_for_obs_stop_reason" string="Stop Observations" type="object" groups="nh_clinical.group_nhc_ward_manager" attrs="{'invisible':[['obs_stop','=',False]]}"/>
                    <button name="prompt_user_for_obs_stop_reason" string="Restart Observations" type="object" groups="nh_clinical.group_nhc_ward_manager" attrs="{'invisible':[['obs_stop','=',True]]}"/>
                </xpath>
                <xpath expr="//sheet/field" position="after">
                    <field name="obs_stop" readonly="1" invisible="1"/>
                </xpath>
            </field>
        </record>
