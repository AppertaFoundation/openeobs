<openerp>
    <data>
        <record model="ir.ui.view" id="view_mental_wardboard_form">
            <field name="name">Mental Wardboard Form View</field>
            <field name="model">nh.clinical.wardboard</field>
            <field name="inherit_id" ref="nh_eobs.view_wardboard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="toggle_obs_stop" string="Stop Observations" type="object" groups="nh_clinical.group_nhc_ward_manager" attrs="{'invisible':[['obs_stop','=',True]]}"/>
                    <button name="toggle_obs_stop" string="Restart Observations" type="object" groups="nh_clinical.group_nhc_ward_manager" attrs="{'invisible':[['obs_stop','=',False]]}"/>
                </xpath>
                <xpath expr="//sheet/field" position="after">
                    <field name="obs_stop" readonly="1" invisible="1"/>
                </xpath>
            </field>
        </record>

         <record model="ir.ui.view" id="wardboard_open_escalation_tasks_view">
             <field name="name">Wardboard Open Escalation Tasks View</field>
             <field name="model">nh.clinical.wardboard.exception</field>
             <field name="arch" type="xml">
                <form string="Warning!">
                    <p>One or more escalation tasks for _patient_name_ are not completed. <field name="stop_render_bug"/></p>
                </form>
            </field>
         </record>

         <record model="ir.actions.act_window" id="wardboard_open_escalation_tasks_exception">
            <field name="name">Wardboard Open Escalation Tasks Exception</field>
            <field name="res_model">nh.clinical.wardboard.exception</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>